{
  "name": "jira-url-wizard",
  "displayName": "JIRA URL Wizard",
  "version": "1.0.7",
  "description": "A browser extension for managing JIRA environment URLs",
  "author": "Khalil Charfi",
  "scripts": {
    "dev": "plasmo dev",
    "build": "NODE_OPTIONS='--no-node-snapshot --max-old-space-size=8192' plasmo build",
    "build:safe": "node --expose-gc --no-node-snapshot --max-old-space-size=8192 scripts/custom-build.js",
    "build:firefox": "NODE_OPTIONS='--no-node-snapshot --max-old-space-size=8192' plasmo build --target=firefox-mv3",
    "build:edge": "NODE_OPTIONS='--no-node-snapshot --max-old-space-size=8192' plasmo build --target=edge-mv3",
    "build:safari": "NODE_OPTIONS='--no-node-snapshot --max-old-space-size=8192' plasmo build --target=safari-mv3",
    "build:all": "pnpm build && pnpm build:firefox && pnpm build:edge && pnpm build:safari",
    "postbuild": "node scripts/optimize.js",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv3",
    "package:edge": "plasmo package --target=edge-mv3",
    "package:safari": "plasmo package --target=safari-mv3",
    "package:all": "pnpm package && pnpm package:firefox && pnpm package:edge && pnpm package:safari",
    "safari:convert": "xcrun safari-web-extension-converter ./build/safari-mv3-prod --project-location ./build/safari-project --app-name 'JIRA URL Wizard' --bundle-identifier 'com.khalilcharfi.jiraurlwizard' --swift",
    "build-and-package:safari": "pnpm build:safari && pnpm safari:convert",
    "build-and-package:all-with-safari": "pnpm build-and-package:all && pnpm build-and-package:safari",
    "rename-packages": "node scripts/rename-packages.js",
    "build-and-package:all": "pnpm build:all && pnpm package:all && pnpm rename-packages",
    "install-image-tools": "./scripts/install-image-tools.sh",
    "optimize-images": "./scripts/optimize-images.sh ./build/chrome-mv3-prod"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "@tiptap/core": "^2.11.7",
    "@tiptap/extension-link": "^2.11.7",
    "@tiptap/extension-placeholder": "^2.11.7",
    "@tiptap/extension-underline": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "lucide-react": "^0.487.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^15.4.1",
    "react-qrcode-logo": "^3.0.0",
    "react-tag-input": "^6.10.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.19",
    "clean-css-cli": "^5.6.3",
    "copy-webpack-plugin": "^12.0.2",
    "glob": "^11.0.1",
    "html-minifier-terser": "^7.2.0",
    "html-webpack-plugin": "^5.6.0",
    "parcel": "^2.11.0",
    "postcss": "^8.4.38",
    "prettier": "3.2.4",
    "tailwindcss": "^3",
    "terser": "^5.39.0",
    "typescript": "5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "manifest": {
    "name": "__MSG_extensionName__",
    "default_locale": "en",
    "permissions": [
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.webp"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "jira-url-wizard@example.com"
      }
    }
  }
}
